# Database
DATABASE_URL="postgresql://fdnda:fdnda_secret@localhost:5432/fdnda_tickets"

# NextAuth
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true

# Email (Resend)
RESEND_API_KEY="re_xxxxx"
EMAIL_FROM="Ticketing FDNDA <tickets@fdnda.org.pe>"

# IZIPAY Configuration
IZIPAY_MERCHANT_CODE="your-merchant-code"
IZIPAY_API_KEY="your-api-key"
IZIPAY_HASH_KEY="your-hash-key"
IZIPAY_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_RSA_PUBLIC_KEY\n-----END PUBLIC KEY-----"
IZIPAY_ENDPOINT="https://sandbox-api.izipay.pe"
# Production: https://api.izipay.pe

# Payments Mode
PAYMENTS_MODE="mock"
NEXT_PUBLIC_PAYMENTS_MODE="mock"

# QR Security
QR_SECRET="your-hmac-secret-for-qr-signatures-min-32-chars"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Ticketing FDNDA"

# ==================== PRODUCCIÃ“N ====================

# Upstash Redis (Rate Limiting + Cache + Queue) - https://upstash.com
# Crear cuenta gratuita y obtener credenciales
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Email Queue
USE_EMAIL_QUEUE="true"

# Cron Jobs Security
CRON_SECRET="your-cron-secret-for-scheduled-jobs"

# Sentry (Error Monitoring) - https://sentry.io
# Crear proyecto Next.js y obtener DSN
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Upload Configuration (optional - for event banners)
UPLOAD_DIR="./public/uploads"
